// -*- mode: jsonc -*-
// https://github.com/Alexays/Waybar
// https://github.com/Alexays/Waybar/wiki
{
    //
    // [ General Way Bar Settings ]
    //
    // https://github.com/Alexays/Waybar/wiki/Configuration
    "layer": "top",
    "position": "top",
    "height": 0,
    "width": 0,
    "spacing": 4,
    "reload_style_on_change": true,
    // [ Module Layout ]
    "modules-left": [
        "sway/workspaces",
        "sway/mode",
        "hyprland/workspaces",
        "hyprland/submap"
    ],
    "modules-center": [
        "sway/window",
        "hyprland/window"
    ],
    "modules-right": [
        "backlight",
        "pulseaudio",
        "network",
        "battery",
        "clock",
        "tray"
    ],
    //
    // [ Modules Configuration ]
    //
    // [ Sway Moduels ]
    // https://github.com/Alexays/Waybar/wiki/Module:-Sway
    //
    // https://github.com/Alexays/Waybar/wiki/Module:-Sway#workspaces
    //
    "sway/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "warp-on-scroll": false
    },
    // https://github.com/Alexays/Waybar/wiki/Module:-Sway#window
    //
    "sway/window": {
        "rewrite": {
            "(.*) ‚Äî Mozilla Firefox": "Û∞àπ - $1",
            "Alacritty": "ÔÑ†  Alacritty",
            "Ghostty": "ÔÑ†  Ghostty",
            "(.*) - Discord": "Ôáø  - $1"
        }
    },
    // [ Hyprland Modules ]
    // https://github.com/Alexays/Waybar/wiki/Module:-Hyprland
    //
    // https://github.com/Alexays/Waybar/wiki/Module:-Hyprland#workspaces
    //
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": false,
        "warp-on-scroll": false,
        "show-special": true,
        "format": "{name}: {icon}",
        "format-icons": {
            "1-terminal": "ÔÑ† ",
            "2-web": "Û∞àπ ",
            "3-gaming": "Ó∞ó ",
            "4-discord": "Ôáø ",
            "6-media": "Ôî¨ ",
            "0-monitor": "Ôâ¨ ",
            "special": "Û±°Ñ ",
            "magic": "Û±°Ñ ",
            "urgent": "ÔÅ™ ",
            "focused": "ÔÜí ",
            "default": "ÔÑë "
        }
    },
    // https://github.com/Alexays/Waybar/wiki/Module:-Hyprland#window
    //
    "hyprland/window": {
        "rewrite": {
            "(.*) ‚Äî Mozilla Firefox": "Û∞àπ - $1",
            "Alacritty": "ÔÑ†  Alacritty",
            "Ghostty": "ÔÑ†  Ghostty",
            "(.*) - Discord": "Ôáø  - $1"
        }
    },
    // https://github.com/Alexays/Waybar/wiki/Module:-Hyprland#submap
    //
    "hyprland/submap": {
        "format": "<span style=\"italic\">{}</span>"
    },
    // [ General Modules ]
    //
    // https://github.com/Alexays/Waybar/wiki/Module:-Backlight
    //
    "backlight": {
        // "device": "acpi_video1",
        "interval": 5,
        "states": {
            "bright": 75
        },
        "format": "{icon}{percent}%",
        "format-icons": [
            "Óéç ",
            "Óèì ",
            "Óèë ",
            "Óèè ",
            "Óèé ",
            "Óèç ",
            "Óèä ",
            "Óèà ",
            "Óéõ "
        ],
        "tooltip": true,
        "tooltip-format": "Middle:\t0%\nClick:\t25%\nDouble:\t50%\nTriple:\t75%\nRight:\t100%",
        "on-click": "brightnessctl set 25%",
        "on-double-click": "brightnessctl set 50%",
        "on-triple-click": "brightnessctl set 75%",
        "on-click-right": "brightnessctl set 100%",
        "on-click-middle": "brightnessctl set 0%"
    },
    // https://github.com/Alexays/Waybar/wiki/Module:-Battery
    //
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% Ôóß ",
        "format-plugged": "{capacity}% Ôá¶ ",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": [
            "ÔâÑ ",
            "ÔâÉ ",
            "ÔâÇ ",
            "ÔâÅ ",
            "ÔâÄ "
        ]
    },
    // https://github.com/Alexays/Waybar/wiki/Module:-Clock
    //
    "clock": {
        // "timezone": "America/New_York",
        "format": "{:%I:%M %p}",
        "format-alt": "{:%B %d,%Y %I:%M %p}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },
    // https://github.com/Alexays/Waybar/wiki/Module:-CPU
    //
    "cpu": {
        "format": "{usage}% Ôãõ ",
        "tooltip": false
    },
    // https://github.com/Alexays/Waybar/wiki/Module:-Idle-Inhibitor
    //
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ ",
            "deactivated": "ÔÅ∞ "
        }
    },
    // https://github.com/Alexays/Waybar/wiki/Module:-Keyboard-State
    //
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£ ",
            "unlocked": "ÔÇú "
        }
    },
    // https://github.com/Alexays/Waybar/wiki/Module:-Memory
    //
    "memory": {
        "format": "{}% ÔÉâ "
    },
    // https://github.com/Alexays/Waybar/wiki/Module:-MPD
    //
    "mpd": {
        "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ‚∏®{songPosition}|{queueLength}‚∏© {volume}% ÔÄÅ ",
        "format-disconnected": "Disconnected ÔÄÅ ",
        "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ÔÄÅ ",
        "unknown-tag": "N/A",
        "interval": 5,
        "consume-icons": {
            "on": "ÔÉÑ "
        },
        "random-icons": {
            "off": "<span color=\"#f53c3c\">ÔÅ¥ </span> ",
            "on": "ÔÅ¥ "
        },
        "repeat-icons": {
            "on": "ÔÄû "
        },
        "single-icons": {
            "on": "ÔÄû1 "
        },
        "state-icons": {
            "paused": "ÔÅå",
            "playing": "ÔÅã"
        },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)"
    },
    // https://github.com/Alexays/Waybar/wiki/Module:-Network
    //
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "{icon}({signalStrength}%)",
        "format-ethernet": "{ipaddr}/{cidr} Ôûñ ",
        "tooltip-format": "IP:\t{ipaddr}\nWAN:\t{essid}\n",
        "format-linked": "{ifname} (No IP) Ôûñ ",
        "format-disconnected": "Disconnected ‚ö†",
        "format-icons": [
            "Û∞§Ø ",
            "Û∞§ü ",
